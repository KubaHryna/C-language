#include <stdio.h>
#include <math.h>
int main()
{
int liczba;
    /*Zadanie 1.2.1*/
    printf("Hello, World\n");
    
    /*Zadanie 1.2.2*/
    printf("Bardzo\ndlugi\nnapis\n");
    
    /*Zadanie 1.2.3*/
    printf("Napis zawierajacy rozne dziwne znaki \\%%#@$ \n");
    
    /*Zadanie 1.2.4*/
    printf("Wczytaj liczbe calkowita: ");
    scanf("%d",&liczba);
    printf("Zdefiniowales liczbe %d \n",liczba);
    
    /*Zadanie 1.2.5 */
    float x;
    printf("Wczytaj liczbe rzeczywsitą: \n");
    scanf("%f",&x);
    printf("Zdefiniowales liczbe %.2f \n",x);
    
    /*Notacja wykładnicza*/
    float z;
     printf("Wczytaj liczbe rzeczywsitą: \n");
     scanf("%f",&z);
     printf("Twoja liczba w notacji wykładniczej %e \n",z);
     
/*Zadanie 1.2.6 */
int a,b,c;
scanf("%d %d %d",&a,&b,&c);
printf("Oto twoje liczby\n %d\n %d\n  %d\n",a,b,c);

/*Zadanie 1.2.7 */
int h;
scanf("%d",&h);
printf("To twoja liczba zwiekszona o 1 : %d ",h+1);

/*Zadanie 1.2.8 */
int a,b,c;
scanf("%d %d %d",&a,&b,&c);
printf("Srednia arytmetyczna tych liczb to:\n (%d+%d+%d)/3=%f ",a,b,c,(a+b+c)/3.0);


/*Zadanie 1.2.9 */
float a;
scanf("%f",&a);
printf("Pierwiastek kwadratowy z liczby %.2f wynosi %.2f ",a,sqrt(a));
printf("Liczba %f podniesiona do kwadratu wynosi %.2f ",a,pow(a,1./2));

/*Zadanie 1.2.10 */
int a;
scanf("%d",&a);
printf("Wartosc bezwzgledna z liczby %d wynosi %d \n",a,abs(a));
/*Dla floatów */
float b;
scanf("%f",&b);
printf("Wartosc bezwzgledna z liczby %f wynosi %f \n",b,fabs(b));

/*Zadanie 1.3.1 */
printf("Wczytaj liczbe calkowita \n");
int x;
scanf("%d",&x);
printf("Wartosc bezwzgledna z liczby %d wynosi \n",x);
if(x>=0)
{
    printf("%d",x);
}
else
{
    printf("%d",-x);
}

/*Zadanie 1.3.2 */
printf("Wczytaj 2 liczby calkowite \n");
int x,y;
scanf("%d %d",&x,&y);
if(x>y)
{
    printf("Liczba %d jest wieksza od %d ",x,y);
}
else if(x<y)
{
    printf("Liczba %d jest wieksza od %d ",y,x);
}else{
    printf("Liczby sa rowne");
}

/*Signum z liczby */
printf("Wczytaj liczbe calkowita \n");
int x,y;
scanf("%d",&x);
printf("Signum z liczby %d wynosi: ",x);
if(x>0)
{
    printf("1");
}
else if(x==0)
{
    printf("0");
}
else if(x<0)
{
    printf("-1");
}

/* Zadanie 1.3.3 */
int a,b,c;
scanf("%d %d %d",&a,&b,&c);
printf("Maksimum z liczb %d oraz %d oraz %d wynosi: ",a,b,c);
if(a>=b && a>=c){
    printf("%d",a);
}
else if(b>=c){
    printf("%d",b);
}
else{
    printf("%d",c);
}

/* Zadanie 1.3.4 */
int a,b;
scanf("%d %d",&a,&b);
printf("Najwieksza wartosc bezwzgledna ma liczba: ");
if(abs(a)>abs(b)){
    printf("%d",a);
}
else if(abs(b)>abs(a)){
    printf("%d",b);
}
else{
    printf("Wartosci bezwzgledne tych liczb sa rowne");
}


/* Zadanie testowe z kolokwium */
int a,b,c;
scanf("%d %d %d",&a,&b,&c);
printf("Druga najwieksza liczba to: ");
if(a>b && a<c){
    printf("%d",a);
}
else if(b<c && b>a ){
    printf("%d",b);
}
else{
    printf("%d",c);
}

    return 0;
